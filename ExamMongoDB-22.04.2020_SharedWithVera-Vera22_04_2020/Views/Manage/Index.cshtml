@using ExamMongoDB.Views.Manage
@inject UserManager<Student> _userManager;
@using ExamMongoDB.Identity
@using Microsoft.AspNetCore.Identity
@model ExamMongoDB.Identity.ManageViewModels.IndexViewModel
@{
    ViewData["Title"] = "Profile";
    ViewData.AddActivePage(ManageNavPages.Index);
}


@Html.Partial("_StatusMessage", Model.StatusMessage)


@*<link href="~/css/login_style.css" rel="stylesheet" type="text/css" />*@
    <link href="~/css/enrolltoexam_style.css" rel="stylesheet" type="text/css" />
<style>
    body {
        background: white;
    }
</style>

<h1>Edit profile</h1>

@*<div class="row" style="background:linear-gradient(to right, #98D1F7, #33AEFF);padding:2rem; border-radius: 1rem; white-space: nowrap;">*@

<div class="row" >
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @*<h1 style="margin-bottom:2em">Edit profile</h1>*@
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>

            @*Edited by Tareq
                ///////////////////////// we need to add those attributes in the controller also*@
            <div class="form-group">
                <label asp-for="Fname">First Name </label>
                <input readonly asp-for="Fname" class="form-control" />
                <span asp-validation-for="Fname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Lname">Last Name</label>
                <input readonly asp-for="Lname" class="form-control" />
                <span asp-validation-for="Lname" class="text-danger"></span>
            </div>
            @*/////////////////////////////////*@

            <div class="form-group">
                <label asp-for="Email">Email address</label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" />
                    <button asp-action="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                }
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <button id="savechanges" class="btn btn-lg btn-primary btn-block text-uppercase btn-outline-info " type="submit">
                Save Changes
            </button>
        </form>
    </div>
</div>




