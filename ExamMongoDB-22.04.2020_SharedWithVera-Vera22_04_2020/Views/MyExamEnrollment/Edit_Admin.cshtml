
@inject UserManager<Student> _userManager;
@using ExamMongoDB.Identity
@using Microsoft.AspNetCore.Identity
@using ExamMongoDB.Models.Repositories;
@*@model ExamMongoDB.Identity.Student*@
@model ExamMongoDB.ViewModels.StudentViewModel


@{
    ViewData["Title"] = "Edit_Admin";
}
<section>
    <div class="row">
        <div class="col-12">
            <a asp-action="Index_Admin">Back to List</a>
        </div>
    </div>
</section>
<section>
    <div class="row">
        <div class="col-md-4">
            <section>
                <form asp-action="Edit_Admin">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input readonly asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label asp-for="Programmes.ProgrammeCode" class="control-label"></label>
                        <input asp-for="Programmes.ProgrammeCode" class="form-control" />
                        <span asp-validation-for="Programmes.ProgrammeCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Programmes.ProgrammeName" class="control-label"></label>
                        <input  asp-for="Programmes.ProgrammeName" class="form-control" />
                        <span asp-validation-for="Programmes.ProgrammeName" class="text-danger"></span>
                    </div>*@

                    @*//////////*@
                <div class="row">





                    @for (int i = 0; i < Model.ExamEnrollment.ToArray().Length; i++)

                    {
                        <div class="column">

                            <label asp-for="ExamEnrollment[i].SubjectCode" class="control-label"></label>
                            <input readonly asp-for="ExamEnrollment[i].SubjectCode" class="form-control" />

                            <label asp-for="ExamEnrollment[i].SubjectName" class="control-label"></label>
                            <input readonly asp-for="ExamEnrollment[i].SubjectName" class="form-control" />

                            <label asp-for="ExamEnrollment[i].ExamDate" class="control-label"></label>
                            <input type="date" asp-for="ExamEnrollment[i].ExamDate" class="form-control" />

                            <label asp-for="ExamEnrollment[i].RoomId" class="control-label"></label>
                            <input asp-for="ExamEnrollment[i].RoomId" class="form-control" />

                            <label asp-for="ExamEnrollment[i].Mark" class="control-label"></label>
                            <input asp-for="ExamEnrollment[i].Mark" class="form-control" />

                            <label asp-for="ExamEnrollment[i].Enrolled" class="control-label"></label>
                            <input type="checkbox" asp-for="ExamEnrollment[i].Enrolled" class="form-control" />
                        </div>
                    }
                </div>
                    <input type="hidden" value="@Model.Id" name="Id" />
                    <input type="hidden" value="@Model.PasswordHash" name="PasswordHash" />
                    <input type="hidden" value="@Model.AuthenticatorKey" name="AuthenticatorKey" />
                    <input type="hidden" value="@Model.NormalizedEmail" name="NormalizedEmail" />
                    <input type="hidden" value="@Model.NormalizedUserName" name="NormalizedUserName" />
                    <input type="hidden" value="@Model.UserName" name="UserName" />
                    <input type="hidden" value="@Model.Email" name="Email" />
                    <input type="hidden" value="@Model.Fname" name="Fname" />
                    <input type="hidden" value="@Model.Lname" name="Lname" />
                    <input type="hidden" value="@Model.PhoneNumber" name="PhoneNumber" />
                    <input type="hidden" value="@Model.SecurityStamp" name="SecurityStamp" />
                    @*<input type="hidden" value="@Model.Roles.ToArray()" name="Roles" />*@
                    @*<input type="hidden" value="@Model.Programmes" name="Programmes" />*@


                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </form>
            </section>
        </div>

       
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
