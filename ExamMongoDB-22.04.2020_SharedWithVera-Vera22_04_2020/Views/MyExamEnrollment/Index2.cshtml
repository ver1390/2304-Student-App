@model IEnumerable<ExamMongoDB.ViewModels.StudentViewModel>


@{
    ViewData["Title"] = "Index";
}

<div class="text-center mb-5">

    <h2 class="display-4">Exam System</h2>
</div>


<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home" role="tab" aria-controls="home">Users</a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane active" id="home" role="tabpanel">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>


                    @*Edited by Tareq*@
                    <th>
                        @for (int i = 0; i < 3; i++)
                        {
                            @*<td>
                                    @Html.DisplayNameFor(model => model.UserName)

                                </td>*@
                        }
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>*@
                        <td>
                            @*If the array list in Student collection is empty, we get index error message
                                ArgumentOutOfRangeException: Index was out of range
                            *@

                            @for (int i = 0; i < 3; i++)
                            {
                            <td>
                                @Html.DisplayFor(modelItem => item.ExamEnrollment[i]) <br />
                            </td>
                        }

                            <td>
                                <a href="/MyExamEnrollment/edit/@item.UserName" class="btn btn-sm btn-outline-primary">Edit</a>
                            </td>
                            @*<td>
                                    <form method="post" action="/MyExamEnrollment/delete">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="submit" class="btn btn-danger" value="Delete" />
                                    </form>
                                </td>*@
                        </tr>
                    }
            </tbody>


        </table>
    </div>
</div>